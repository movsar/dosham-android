<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_background_color"
    android:orientation="vertical">


    <EditText
        android:id="@+id/ActEdi_txtPhrase"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="left|top"
        android:hint="@string/input_text_on_chechen_language"
        android:textSize="@dimen/n_textsize"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ActEdi_txtForms"
        android:hint="@string/input_forms"
        android:textSize="@dimen/n_textsize" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ActEdi_txtCheNotes"
        android:hint="@string/che_notes"
        android:textSize="@dimen/n_textsize" />

    <Spinner
        android:id="@+id/ActEdi_spnCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ActEdi_tvSource"
        android:text=""
        android:paddingLeft="7dp"
        android:textSize="@dimen/n_textsize"
        android:textColor="?attr/exp_filled_phrase_color"/>
    <ListView
        android:id="@+id/lvEdTranslations"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/main_frame_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/ActEdi_spnLang"
            android:layout_width="0dp"
            android:layout_height="@dimen/btns_height"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:entries="@array/arr_languages"
            android:prompt="@string/select_a_language"
            android:spinnerMode="dialog"
            android:visibility="gone" />

    </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ActEdi_txtTranslation"
        android:hint="@string/hint_input_here_translation"
        android:visibility="gone" />

    <EditText
        android:id="@+id/ActEdi_txtTranslationNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left|top"
        android:hint="@string/notes"
        android:textSize="@dimen/n_textsize"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="right"
        android:id="@+id/ActEdi_layBottomBar">

        <Button
            android:id="@+id/ActEdi_btnAddTranslation"
            android:layout_width="0dp"
            android:layout_height="@dimen/btns_height"
            android:text="@string/add_translation"
            android:textSize="@dimen/s_textsize"
            android:layout_weight="1" />

        <Button
            android:id="@+id/ActEdi_btnAddPhrase"
            android:layout_width="0dp"
            android:layout_height="@dimen/btns_height"
            android:text="@string/save"
            android:textSize="@dimen/s_textsize"
            android:layout_gravity="right"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>