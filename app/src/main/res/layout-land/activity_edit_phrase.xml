<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_background_color"
    android:orientation="vertical">

    <View
        android:id="@+id/anchor"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/ActEdi_txtPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/anchor"
        android:gravity="left|top"
        android:hint="@string/input_text_on_chechen_language"
        android:textSize="@dimen/n_textsize" />


    <EditText
        android:id="@+id/ActEdi_txtForms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/anchor"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/ActEdi_txtPhrase"
        android:hint="@string/input_forms" />

    <Spinner
        android:id="@+id/ActEdi_spnCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/ActEdi_txtPhrase"
        android:layout_below="@id/ActEdi_txtPhrase"
        android:paddingLeft="5dp" />

    <EditText
        android:id="@+id/ActEdi_txtCheNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ActEdi_spnCategory"
        android:layout_alignLeft="@id/ActEdi_txtForms"
        android:layout_below="@id/ActEdi_txtForms"
        android:hint="@string/che_notes" />

    <TextView
        android:id="@+id/ActEdi_tvSource"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ActEdi_txtCheNotes"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:textColor="?attr/exp_filled_phrase_color"
        android:textSize="@dimen/n_textsize" />


    <ListView
        android:id="@+id/lvEdTranslations"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ActEdi_tvSource"
        android:background="?attr/main_frame_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/lvEdTranslations"
        android:layout_toLeftOf="@id/ActEdi_layBottomBar"
        android:gravity="bottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ActEdi_txtTranslation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_input_here_translation"
            android:textSize="@dimen/n_textsize"
            android:visibility="gone" />

        <EditText
            android:id="@+id/ActEdi_txtTranslationNotes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/notes"
            android:textSize="@dimen/n_textsize"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ActEdi_layBottomBar"
        android:layout_width="@dimen/btns_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical"
        android:weightSum="3">

        <Spinner
            android:id="@+id/ActEdi_spnLang"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btns_height"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:entries="@array/arr_languages"
            android:gravity="left"
            android:prompt="@string/select_a_language"
            android:spinnerMode="dialog"
            android:visibility="gone" />

        <Button
            android:id="@+id/ActEdi_btnAddTranslation"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btns_height"
            android:layout_weight="1"
            android:text="@string/add_translation"
            android:textSize="@dimen/s_textsize" />

        <Button
            android:id="@+id/ActEdi_btnAddPhrase"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btns_height"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@string/save"
            android:textSize="@dimen/s_textsize" />
    </LinearLayout>

</RelativeLayout>